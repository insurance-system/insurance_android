<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/cus_ins_money_tv"
        android:text="보험금 청구하기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/cus_ins_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="보험 이름"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/cus_ins_money_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="24dp"/>

    <EditText
        android:id="@+id/cus_ins_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="보험 청구 비 (단위 : 원)"
        android:paddingBottom="16dp"
        android:textSize="14sp"
        android:inputType="number"
        android:maxLength="18"
        app:layout_constraintTop_toBottomOf="@id/cus_ins_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="24dp"/>

    <EditText
        android:id="@+id/cus_accident_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="기타 내용"
        android:paddingBottom="16dp"
        android:textSize="14sp"
        android:inputType="textPersonName"
        android:maxLength="18"
        app:layout_constraintTop_toBottomOf="@id/cus_ins_money"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="24dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="보험 청구하기"
        android:textSize="14sp"
        android:paddingVertical="6dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_join_bt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="69dp"
        android:layout_marginBottom="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>