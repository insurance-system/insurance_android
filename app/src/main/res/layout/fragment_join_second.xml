<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/second_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이메일"
        android:paddingBottom="16dp"
        android:textSize="14sp"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="24dp"/>

    <EditText
        android:id="@+id/second_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="핸드폰번호"
        android:paddingBottom="16dp"
        android:textSize="14sp"
        android:inputType="phone"
        app:layout_constraintTop_toBottomOf="@+id/second_email"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="24dp"/>

    <TextView
        android:id="@+id/second_job_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="직업"
        app:layout_constraintTop_toBottomOf="@id/second_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="10dp"
        />

    <RadioGroup
        android:id="@+id/second_job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/second_job_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="20dp"
        >
        <RadioButton android:id="@+id/job_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회사원"
            />

        <RadioButton android:id="@+id/job_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학생"
            />

        <RadioButton android:id="@+id/job_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주부"
            />

        <RadioButton android:id="@+id/job_not"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그 외"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/second_insurance_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관심보험"
        app:layout_constraintTop_toBottomOf="@id/second_job"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="10dp"
        />

    <RadioGroup
        android:id="@+id/second_insurance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/second_insurance_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="20dp"
        >
        <RadioButton android:id="@+id/life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생명"
            />

        <RadioButton android:id="@+id/non_life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비생명"
            />

    </RadioGroup>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textSize="14sp"
        android:paddingVertical="6dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_join_bt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="69dp"
        android:layout_marginBottom="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>