<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.view.insurance.HomeFragment"
    android:id="@+id/fragment_home">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/home_worker_tv"
                android:text="관리자 페이지 입니다"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="16sp"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:id="@+id/home_new_customer_get_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@+id/home_worker_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상담 대기 신규 고객 명단 조회"
                    android:textSize="20sp"
                    />

            </LinearLayout>

            <View
                android:id="@+id/setting_divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E4E4E7"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_new_customer_get_ll"/>

            <LinearLayout
                android:id="@+id/home_edu_upload_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@+id/setting_divider1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영업 교육 강의 업로드"
                    android:textSize="20sp"
                    />

            </LinearLayout>

            <View
                android:id="@+id/setting_divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E4E4E7"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_edu_upload_ll"/>



        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_baseline_create_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>