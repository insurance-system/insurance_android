<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/first_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아이디 입력"
        android:paddingBottom="16dp"
        android:textSize="14sp"
        android:inputType="textPersonName"
        android:maxLength="18"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="24dp"/>

    <EditText
        android:id="@+id/first_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호 입력"
        android:paddingBottom="16dp"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:maxLength="18"
        app:layout_constraintTop_toBottomOf="@id/first_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="24dp"/>

    <EditText
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름"
        android:paddingBottom="16dp"
        android:textSize="14sp"
        android:inputType="textPersonName"
        android:maxLength="18"
        app:layout_constraintTop_toBottomOf="@id/first_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="24dp"/>

    <EditText
        android:id="@+id/first_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="주소"
        android:paddingBottom="16dp"
        android:textSize="14sp"
        android:inputType="textPersonName"
        android:maxLength="18"
        app:layout_constraintTop_toBottomOf="@id/first_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="24dp"/>

    <EditText
        android:id="@+id/first_detail_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="상세주소"
        android:paddingBottom="16dp"
        android:textSize="14sp"
        android:inputType="textPersonName"
        android:maxLength="18"
        app:layout_constraintTop_toBottomOf="@id/first_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="24dp"/>

    <EditText
        android:id="@+id/first_zipcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="우편번호"
        android:paddingBottom="16dp"
        android:textSize="14sp"
        android:inputType="number"
        android:maxLength="18"
        app:layout_constraintTop_toBottomOf="@id/first_detail_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="24dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/custom_join_bt"
        android:paddingVertical="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="69dp"
        android:layout_marginBottom="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>